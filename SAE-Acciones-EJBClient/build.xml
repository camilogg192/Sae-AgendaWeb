<project name="SAE-Acciones-EJBClient" basedir=".">

	<!-- PROPERTIES -->
	<property environment="env" />
	<property name="manifest.file" value="build/MANIFEST.MF" />
	<!-- dependencias de compilacion -->
	<property name="jboss.lib" value="${jboss.home}/common/lib" />
	<property name="jboss.local.lib" value="${jboss.home}/server/default/lib" />
	<property name="java.src" value="ejbModule" />
	<property name="SAE-EAR.lib" value="../SAE-EAR/EarContent/lib" />

	
	
	
	
	
		
	<tstamp>
		<format property="TODAY" pattern="yyyy-MM-dd HH:mm:ss" />
	</tstamp>
	
	<!-- PATH -->
	<path id="base.path">
		<fileset dir="${jboss.lib}">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${jboss.local.lib}">
			<include name="**/*.jar" />
		</fileset>
		<!--
        <fileset dir="${SAE-EAR.lib}">
            <include name="**/*.jar" />
        </fileset>		
        -->
	</path>

	<target name="clean">

		<sequential>
			<mkdir dir="build" />
			<delete quiet="true">
				<fileset dir="build">
					<include name="**/*" />
				</fileset>
			</delete>

			<mkdir dir="build/classes" />
			<mkdir dir="build/jar" />

		</sequential>
	</target>
	

	<target name="compile" depends="clean">

		<manifest file="build/MANIFEST.MF">
			<attribute name="Built-By" value="${user.name}" />
			<attribute name="Built-Date" value="${TODAY}" />
		</manifest>

		<javac srcdir="${java.src}" destdir="build/classes" target="1.6" encoding="UTF-8" includeantruntime="false" debug="true">
			<classpath>
				<path refid="base.path" />
			</classpath>
		</javac>
        <copy todir="build/classes">
            <fileset dir="${java.src}" excludes="**/*.java" />
        </copy>
	</target>

</project>